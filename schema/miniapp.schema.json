{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Studio B mini-app metadata",
  "type": "object",
  "required": [
    "slug",
    "title",
    "subtitle",
    "category",
    "keywords",
    "isFeatured",
    "ageBand",
    "universalLink",
    "asset",
    "skuIds"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "title": {
      "type": "string",
      "minLength": 2
    },
    "subtitle": {
      "type": "string",
      "minLength": 2
    },
    "category": {
      "type": "string",
      "minLength": 2
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "isFeatured": {
      "type": "boolean"
    },
    "ageBand": {
      "type": "object",
      "required": ["min"],
      "properties": {
        "min": {
          "type": "integer",
          "minimum": 0
        },
        "max": {
          "type": ["integer", "null"],
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "universalLink": {
      "type": "string",
      "format": "uri"
    },
    "asset": {
      "type": "object",
      "required": ["bundleSubdirectory", "entrypoint"],
      "properties": {
        "bundleSubdirectory": {
          "type": "string",
          "minLength": 2
        },
        "entrypoint": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "skuIds": {
      "type": "array",
      "items": { "type": "string" }
    },
    "previewImageName": {
      "type": ["string", "null"]
    }
  },
  "additionalProperties": false
}

